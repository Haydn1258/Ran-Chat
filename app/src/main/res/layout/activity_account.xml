<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".setting.AccountActivity">

    <ImageButton
        android:id="@+id/account_imgButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/ic_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"/>


    <TextView
        android:id="@+id/account_txtvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/accout_setting"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:layout_marginStart="40dp"
        app:layout_constraintStart_toEndOf="@+id/account_imgButton"
        app:layout_constraintTop_toTopOf="@+id/account_imgButton"/>

    <TextView
        android:id="@+id/account_txtvAccount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="계정"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@color/colorGray"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/account_txtvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
         />

    <Button
        android:id="@+id/account_btnSignOut"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/signout"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/account_txtvAccount"

        android:background="@android:color/transparent"/>

    <View
        android:id="@+id/account_bottomView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/account_btnSignOut"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/colorGray"/>




</androidx.constraintlayout.widget.ConstraintLayout>