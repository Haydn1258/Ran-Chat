<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="240dp"
    android:layout_height="match_parent"
    android:layout_gravity="end"
    android:background="@android:color/white"
    android:id="@+id/drawer">

    <ImageView
        android:id="@+id/drawer_imgv"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/baseline_supervised_user_circle_black_48dp2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="30dp"/>


    <TextView
        android:id="@+id/drawer_txtvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="aaa"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/drawer_imgv" />

    <Button
        android:id="@+id/drawer_btnExit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/exit"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@android:color/transparent"
        android:paddingEnd="50dp">

    </Button>

    <ImageView
        android:id="@+id/drawer_imgvExit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/drawer_btnExit"
        app:layout_constraintBottom_toBottomOf="@+id/drawer_btnExit"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        app:srcCompat="@drawable/baseline_exit_to_app_black_36dp" />

</androidx.constraintlayout.widget.ConstraintLayout>